@model BeaconWebApplication.ViewModels.BeaconViewModel
@{
    ViewBag.Title = "Create";
    ViewBag.Description = "Add a beacon to database";
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>
                    @ViewBag.Title
                    <small>@ViewBag.Description</small>
                </h1>
            </div>
            <div class="col-lg-8 col-centered">
                <form method="post">
                    <div class="form-group">
                        <label class="control-label" asp-for="UUID">UUID</label>
                        <input type="text" class="form-control" id="form-group-input" asp-for="UUID">
                        <span asp-validation-for="UUID"></span>

                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Major">Major</label>
                        <input type="text" class="form-control" id="form-group-input" asp-for="Major">
                        <span asp-validation-for="Major"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Minor">Minor</label>
                        <input type="text" class="form-control" id="form-group-input" asp-for="Minor">
                        <span asp-validation-for="Minor"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="ImmediateMessage">Immediate Message</label>
                        <textarea type="text" class="form-control" id="form-group-input" asp-for="ImmediateMessage"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="NearMessage">Near Message</label>
                        <textarea type="text" class="form-control" id="form-group-input" asp-for="NearMessage"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="FarMessage">Far Message</label>
                        <textarea type="text" class="form-control" id="form-group-input" asp-for="FarMessage"></textarea>
                    </div>

                    <div class="btn-group">
                        <button type="submit" class="btn btn-default">Save</button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>